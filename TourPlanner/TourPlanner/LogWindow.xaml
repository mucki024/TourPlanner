<Window x:Class="TourPlanner.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:TourPlanner" 
        xmlns:pro="clr-namespace:TourPlanner.Model;assembly=TourPlanner.Model"
        mc:Ignorable="d"
        Title="LogWindow" Height="400" Width="300">
    <Window.DataContext>
        <local:SubWindowViewLog/>
    </Window.DataContext>
    <Window.Resources>
        <ObjectDataProvider x:Key="GetDataFromEnum"
                        ObjectType="{x:Type sys:Enum}"
                        MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="pro:DiffucltyLevel" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" >
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Log Attributes:" FontSize="16"></Label>
            </StackPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="5">
            <Label Content="Date" />
            <DatePicker Text="{Binding Timestamp}"
                  IsTodayHighlighted="True" 
                  FirstDayOfWeek="Monday"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="5">
            <Label Content="Difficulty" />
            <ComboBox ItemsSource="{Binding Source={StaticResource GetDataFromEnum}}" SelectedValue="{Binding Difficulty}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="5">
            <Label Content="Total Time" />
            <TextBox Text="{Binding TotalTime, ValidatesOnDataErrors=True}">
            </TextBox>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="5">
            <Label Content="Rating" />
            <TextBox Text="{Binding Rating}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="5">
            <Label Content="Comment" />
            <TextBox Text="{Binding Comment}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <Button  x:Name="submit" Content = "Submit"
            HorizontalAlignment = "Center" Margin = "0,0,0,5"
            VerticalAlignment = "Bottom" Width = "75" Command="{Binding Submit}" IsEnabled="{Binding SubmitEnable}"/>
        </DockPanel>
    </DockPanel>
</Window>
